<div class="login-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h4 class="text-center">Forgot your password?</h4><br>      
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= recaptcha_tags %>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Send me reset password instructions</button>
    </div>
  <%end%>
  <%= render "devise/shared/links" %>
</div>
